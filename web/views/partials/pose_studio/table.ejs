<div class="relative overflow-x-auto shadow-md my-4 mr-2 ml-4 sm:rounded-lg" id="table_a1">
    <table class="w-full text-sm text-center text-white">
        <thead class="text-xs uppercase">
            <tr>
                <th scope="col" class="px-3 py-3 bg-gray-800">
                    Enable
                </th>
                <th scope="col" class="px-3 py-3">
                    DXL ID
                </th>
                <th scope="col" class="px-3 py-3 bg-gray-800">
                    Joint Name
                </th>
                <th scope="col" class="px-3 py-3">
                    Current Pos.
                </th>
                <th scope="col" class="px-3 py-3 bg-gray-800">
                    Target Pos.
                </th>
                <th scope="col" class="px-3 py-3">
                    Saved pos.
                </th>
            </tr>
        </thead>
        <tbody>
            <% for(let i = 0; i < Math.floor(joint_config.dxl_num/2); i++) { %>
                <tr class="border-b border-gray-700">
                    <th scope="row" class="px-3 py-3 font-medium whitespace-nowrap bg-gray-800">
                        <input type="checkbox" id="torque_en_<%= joint_config.dxl_id[i] %>" name="<%= joint_config.joint_name[i] %>" value="Bike">
                    </th>
                    <td class="px-3 py-3">
                        <%= joint_config.dxl_id[i] %>
                    </td>
                    <td class="px-3 py-3 bg-gray-800">
                        <%= joint_config.joint_name[i] %>
                    </td>
                    <td class="px-3 py-3" id="pos_<%= joint_config.dxl_id[i] %>">
                        0.0
                    </td>
                    <td class="px-3 py-3 bg-gray-800">
                        <input id="tpos_<%= joint_config.dxl_id[i] %>" disabled class="border text-sm rounded-lg block w-24 py-1 text-center bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500" placeholder="0">
                    </td>
                    <td class="px-3 py-3" id="spos_<%= joint_config.dxl_id[i] %>">
                        0
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>
